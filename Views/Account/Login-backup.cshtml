    <script>
        $(document).ready(function () {


        });


        function onLoginClickUPWD() {
            if ($('#txtUserName').val().trim() === '' || $('#txtPassword').val().trim() === '') {
                // At least one of the fields is empty, show an error message
                alert('Please fill in both UserName and Password fields.');
                $('#txtUserName').focus();
                return;
            }


            var _data = {
                UserName: $('#txtUserName').val(),
                Password: $('#txtPassword').val()
            };

            $.ajax({
                url: '/api/AccountPasswordVerifyApi',
                contentType: 'application/json',
                type: 'POST',
                data: JSON.stringify(_data),
                beforeSend: function () {

                    $('#divWrongLogin').hide();
                    $('#divWrongLoginUPWD').hide();
                    $('#divLoader').show();
                },
                success: function (data) {

                    $('#divLoader').hide();
                    $('#divWrongLoginUPWD').hide();

                    if (data == 1) {

                        window.location.href = "/home/dashboard";
                    }
                    else if (data == -2) {
                        //
                        window.location.href = "/account/setPassword";
                        alert('Your Password has been expired.');
                    }
                    else if (data == -3) {

                        //window.location.href = "/account/login";
                        //alert('No password has been set for this account.Please check the email for more info');
                        let timerInterval = 5000;
                        Swal.fire({
                            title: "Set your password",
                            html: "No password has been set for this account.Please check your email for more info ",
                            timer: timerInterval,
                            timerProgressBar: true,
                            didOpen: () => {
                                Swal.showLoading();
                                const timer = Swal.getPopup().querySelector("b");
                                const updateTimer = () => {
                                    const remainingTime = Swal.getTimerLeft();
                                    timer.textContent = (remainingTime / 1000).toFixed(0);
                                };

                                const interval = setInterval(updateTimer, 1000);
                                Swal.intervalId = interval;
                            },
                            willClose: () => {

                                clearInterval(Swal.intervalId);
                                window.location.href = 'https://cisoinsight.savemydollars.com.au/';
                            }
                        }).then((result) => {

                            if (result.dismiss === Swal.DismissReason.timer) {
                                console.log("I was closed by the timer");
                            }
                        });


                    }
                    else if (data == -1) {
                        alert("User is not subscribed or the subscription has expired");
                    }
                    else {

                        $('#divWrongLoginUPWD').show();

                    }
                },
                error: function (e) {

                    $('#divWrongLogin').show();
                    $('#divLoader').hide();
                    console.log(e.responseText);
                }
            });


        }



    </script>
